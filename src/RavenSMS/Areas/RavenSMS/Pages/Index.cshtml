                        <h4 class="stats-type mb-1">In Queue</h4>
                        <div class="stats-figure">@Model.TotalInQueue</div>
                    </div>
                    <!--//app-card-body-->
                    <a class="app-card-link-mask" asp-page="/Messages/Index" asp-fragment="queued"></a>
                </div>
                <!--//app-card-->
            </div>
            <!--//col-->
            <div class="col-6 col-lg-3">
