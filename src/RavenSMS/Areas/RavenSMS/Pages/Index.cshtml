@page
@model RavenSMS.Pages.DashboradPageModel
@{
    ViewData[ViewDataKeys.PageTitle] = "Dashboard";
    ViewData[ViewDataKeys.SelectedPage] = PageId.DashboardPage;
}

<div class="app-content pt-3 p-md-3 p-lg-4">
