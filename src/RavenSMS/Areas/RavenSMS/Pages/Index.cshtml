                        <h4 class="stats-type mb-1">Total Sent</h4>
                        <div class="stats-figure">@Model.TotalSent</div>
                    </div>
                    <!--//app-card-body-->
                    <a class="app-card-link-mask" asp-page="/Messages/Index" asp-fragment="sent"></a>
                </div>
                <!--//app-card-->
            </div>
            <!--//col-->
            <div class="col-6 col-lg-3">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card-body p-3 p-lg-4">
                        <h4 class="stats-type mb-1">Total failed</h4>
                        <div class="stats-figure">@Model.TotalFailed</div>
                    </div>
                    <!--//app-card-body-->
                    <a class="app-card-link-mask" asp-page="/Messages/Index" asp-fragment="failed"></a>
                </div>
                <!--//app-card-->
            </div>
            <!--//col-->
            <div class="col-6 col-lg-3">
                <div class="app-card app-card-stat shadow-sm h-100">
